@page
@inject IHtmlLocalizer<AppResources> T
@model ResetPasswordModel
@{
    ViewData["Title"] = T["ResetPasswordTitle"];
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <input asp-for="Input.Code" type="hidden" />

    <div class="form-group">
        <label asp-for="Input.Email">@T["EmailLabel"]</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="invalid-feedback"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password">@T["PasswordLabel"]</label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="invalid-feedback"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword">@T["ConfirmPasswordLabel"]</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback"></span>
    </div>

    <button type="submit" class="btn btn-primary">@T["ResetPasswordButton"]</button>
</form>
